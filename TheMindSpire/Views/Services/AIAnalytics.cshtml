@{
    ViewData["Title"] = "AI & Analytics Solutions";
}

<style>
    .ai-section {
        padding: 100px 0;
        background: linear-gradient(135deg, #f5f8ff, #e8f0ff);
        font-family: 'Segoe UI', sans-serif;
    }

    .ai-container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

        .section-header h2 {
            font-size: 2.8rem;
            color: #001f3f;
            font-weight: 700;
            margin-bottom: 10px;
            background: linear-gradient(90deg, #0078d7, #00b4ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .section-header p {
            font-size: 1.1rem;
            color: #555;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.6;
        }

    /* Grid Layout */
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
    }

    /* Card Styles */
    .category-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        border-top: 6px solid #0078d7;
        position: relative;
        overflow: hidden;
    }

        .category-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(0,120,215,0.05) 0%, transparent 70%);
            transform: rotate(45deg);
            pointer-events: none;
        }

        .category-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            border-top-color: #00b4ff;
        }

        /* Card Titles */
        .category-card h3 {
            color: #0078d7;
            font-size: 1.5rem;
            margin-bottom: 12px;
            transition: transform 0.3s ease;
        }

        .category-card:hover h3 {
            transform: scale(1.05);
        }

        .category-card p {
            color: #444;
            line-height: 1.6;
            margin-bottom: 15px;
            font-size: 0.95rem;
        }

    /* Subcategory List */
    .subcategory-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .subcategory-list li {
            margin: 10px 0;
            background: #f4f9ff;
            border-left: 5px solid #0078d7;
            padding: 10px 14px;
            border-radius: 8px;
            transition: all 0.3s ease;
            position: relative;
        }

            .subcategory-list li::before {
                content: '🤖';
                margin-right: 8px;
            }

            .subcategory-list li:hover {
                background: #e0f2ff;
                transform: translateX(5px);
            }

        .subcategory-list strong {
            color: #004d99;
        }

    /* Button Styles */
    .learn-more-btn {
        display: inline-block;
        margin-top: 1rem;
        background: linear-gradient(90deg, #0078d7, #00b4ff);
        color: white;
        padding: 12px 22px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .learn-more-btn:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    /* Floating animation for cards */
    keyframes float {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-6px);
    }

    }

    .category-card {
        animation: float 6s ease-in-out infinite;
    }

        /* Gradient accent at bottom of card */
        .category-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #0078d7, #00b4ff);
            border-radius: 0 0 20px 20px;
        }

</style>

<section class="ai-section">
    <div class="ai-container">
        <div class="section-header">
            <h2>AI & Analytics</h2>
            <p>
                Unlock the power of Artificial Intelligence and Data Analytics to make smarter business decisions,
                automate processes, and gain deeper insights into your operations.
            </p>
        </div>

