@{
    ViewData["Title"] = "Enterprise Web Solutions";
}

<style>
    .enterprise-section {
        padding: 100px 0;
        background: linear-gradient(135deg, #f0f7f9, #e0eef5);
        font-family: 'Segoe UI', sans-serif;
    }

    .enterprise-container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

        .section-header h2 {
            font-size: 2.8rem;
            color: #0a3d62;
            font-weight: 700;
            margin-bottom: 10px;
            background: linear-gradient(90deg, #2563EB, #00b4d8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .section-header p {
            font-size: 1.1rem;
            color: #555;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.6;
        }

    /* Grid Layout */
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
    }

    /* Card Styles */
    .category-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        border-top: 6px solid #0078d7;
        position: relative;
        overflow: hidden;
        animation: float 6s ease-in-out infinite;
    }

        .category-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(37,99,235,0.05) 0%, transparent 70%);
            transform: rotate(45deg);
            pointer-events: none;
        }

        .category-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            border-top-color: #00b4d8;
        }

        .category-card h3 {
            color: #0078d7;
            font-size: 1.5rem;
            margin-bottom: 12px;
            transition: transform 0.3s ease;
        }

        .category-card:hover h3 {
            transform: scale(1.05);
        }

        .category-card p {
            color: #444;
            line-height: 1.6;
            margin-bottom: 15px;
            font-size: 0.95rem;
        }

    /* Subcategory List */
    .subcategory-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .subcategory-list li {
            margin: 10px 0;
            background: #f4f9ff;
            border-left: 5px solid #0078d7;
            padding: 10px 14px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .subcategory-list li::before {
                content: '💼';
                margin-right: 8px;
            }

            .subcategory-list li:hover {
                background: #e0f0ff;
                transform: translateX(5px);
            }

        .subcategory-list strong {
            color: #004d99;
        }

    /* Button Styles */
    .learn-more-btn {
        display: inline-block;
        margin-top: 1rem;
        background: linear-gradient(90deg, #2563EB, #00b4d8);
        color: white;
        padding: 12px 22px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .learn-more-btn:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    /* Floating animation */
    keyframes float {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-6px);
    }

    }

    .category-card::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 6px;
        background: linear-gradient(90deg, #2563EB, #00b4d8);
        border-radius: 0 0 20px 20px;
    }
</style>

<section class="enterprise-section">
    <div class="enterprise-container">
        <div class="section-header">
            <h2>Enterprise Web Solutions</h2>
            <p>
                Powerful and scalable web solutions designed for enterprises and ERP systems to streamline operations,
                integrate business processes, and improve productivity.
            </p>
        </div>

        <div class="categories-grid">

            <!-- Custom ERP Web Portals -->
            <div class="category-card">
                <h3>Custom ERP Web Portals</h3>
                <p>
                    Tailored web portals to connect multiple departments and enable smooth ERP system operations.
                </p>
                <ul class="subcategory-list">
                    <li><strong>Employee Portals:</strong> Access company resources, HR tools, and collaboration platforms.</li>
                    <li><strong>Vendor Portals:</strong> Manage supplier relationships and procurement workflows online.</li>
                    <li><strong>Customer Portals:</strong> Engage customers with self-service tools and dashboards.</li>
                </ul>
                <a href="#" class="learn-more-btn">Explore More</a>
            </div>

            <!-- ERP Integration Services -->
            <div class="category-card">
                <h3>ERP Integration Services</h3>
                <p>
                    Seamless integration of web applications with your existing ERP systems for real-time data flow.
                </p>
                <ul class="subcategory-list">
                    <li><strong>Module Integration:</strong> Connect finance, HR, inventory, and CRM modules.</li>
                    <li><strong>API Development:</strong> Custom APIs for secure data exchange.</li>
                    <li><strong>Third-Party Integration:</strong> Link with payment gateways, logistics, and analytics tools.</li>
                </ul>
                <a href="#" class="learn-more-btn">Explore More</a>
            </div>

            <!-- Business Analytics Dashboards -->
            <div class="category-card">
                <h3>Business Analytics Dashboards</h3>
                <p>
                    Interactive dashboards and reports to provide insights into business performance across departments.
                </p>
                <ul class="subcategory-list">
                    <li><strong>Financial Analytics:</strong> Monitor revenue, expenses, and budgets in real-time.</li>
                    <li><strong>Operations Metrics:</strong> Track productivity, workflows, and efficiency.</li>
                    <li><strong>Custom Reports:</strong> Generate tailored analytics for management decision-making.</li>
                </ul>
                <a href="#" class="learn-more-btn">Explore More</a>
            </div>

            <!-- ERP Maintenance & Support -->
            <div class="category-card">
                <h3>ERP Maintenance & Support</h3>
                <p>
                    Continuous monitoring, updates, and support for enterprise web systems to ensure smooth operations.
                </p>
                <ul class="subcategory-list">
                    <li><strong>System Optimization:</strong> Improve performance and user experience.</li>
                    <li><strong>Version Upgrades:</strong> Keep ERP modules updated with latest features.</li>
                    <li><strong>Technical Support:</strong> 24/7 assistance for critical business processes.</li>
                </ul>
                <a href="#" class="learn-more-btn">Explore More</a>
            </div>

        </div>
    </div>
</section>
