@model List<TheMindSpire.Models.EmpData.MindSpireData>

<style>
    .container{
        margin-top:30px;
    }
    h1{
        margin-top:60px;
        margin-left:50px;
    }
</style>

<h1> <br />THIS IS EMPLOYEES LIST</h1>

<div class="container">

@if(Model != null ){
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var lis in Model)
                {
                    <tr>
                        <td>@lis.Id</td>
                        <td>@lis.Name</td>
                        <td>@lis.Role</td>
                        <td>@lis.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Employees are their for Now!</p>
    }
</div>